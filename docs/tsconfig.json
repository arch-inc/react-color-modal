{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "./next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../lib/HueSlider.tsx",
    "../lib/HueSaturationBrightnessInput.tsx",
    "../lib/utils.ts",
    "../lib/NumberInput.tsx",
    "../lib/SaturationBrightnessPanel.tsx",
    "../lib/InputGroups.tsx",
    "../lib/SaturationBrightnessEventHandler.ts"
  ]
}
